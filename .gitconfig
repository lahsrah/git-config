[core]
	autocrlf = true
[user]
	name = My.Name
	email = my@email.com
[push]
	default = current
[merge]
	tool=p4merge
[mergetool "p4merge"]
    path = C:/Program Files/Perforce/p4merge.exe
	keepBackup = false
    trustExitCode = false
	prompt = false

[diff]
	tool = p4merge

[difftool "winmerge"]
	name = WinMerge
	trustExitCode = true
	prompt = false
	path = C:/Data/Apps/WinMerge
	cmd = WinMergeU.exe -u -e $LOCAL $REMOTE


